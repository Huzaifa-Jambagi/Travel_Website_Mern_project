<% layout("/layouts/boilerplate.ejs") %>

  <a%= success %>
  

    <div id="filters">
      <div class="filter">
        <a href="/listings/search?query=Mountain">
        <div><i class="fa-solid fa-mountain"></i></div>
        <p>Mountains</p>
      </a>
      </div>
      <div class="filter">
        <a href="/listings/search?query=arctic">
        <div> <i class="fa-regular fa-snowflake"></i></div>
        <p>Artic</p>
      </a>
      </div>
      <div class="filter">
        <a href="/listings/search?query=forest">
        <div><i class="fa-solid fa-tree"></i></div>
        <p>Forest</p>
      </a>
      </div>
      <div class="filter">
        <a href="/listings/search?query=beach">
        <div><i class="fa-solid fa-umbrella-beach"></i></div>
        <p>Beach</p>
      </a>
      </div>
      <div class="filter">
        <a href="/listings/search?query=farm">
        <div><i class="fa-solid fa-tractor"></i></div>
        <p>Farm</p>
      </a>
      </div>
      <div class="filter">
        <a href="/listings/search?query=apartment">
        <div> <i class="fa-solid fa-bed"></i></div>
        <p>Apartment</p>
      </a>
      </div>
      <div class="filter">
        <a href="/listings/search?query=villa">
        <div><i class="fa-solid fa-water-ladder"></i></div>
        <p>Villa</p>
      </a>
      </div>
    </div>


    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3" >
      <% for(let listing of allListings){ %>
        <a href="/listings/<%= listing._id %>">
          <div class="card col listing-card" style="padding-bottom: 10px;">
            <img src="<%= listing.image.url%>" class="card-img-top" alt="listing_image" style="height: 21rem;">
            <div class="card-body">
              <p class="card-text"><b>
                  <%= listing.title %>
                </b>
                <br>
                &#8377 <%= listing.price.toLocaleString("en-IN")%>/night
              </p>
            </div>
          </div>
        </a>
        <% } %>
    </div>